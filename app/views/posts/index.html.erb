<!-- View for showing all `Post` -->
<h1>Listing of Posts</h1>

<%= form_tag(posts_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
<% if @post.blank? %>
  <h4>There are no posts containing the term <%= params[:search] %>.</h4>
<% end %>

<br>
<%= link_to 'New post', new_post_path %>
<br>
<br>
<table>
  <% unless @post.blank? %>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
  <%end%>

  <% @post.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td> | <%= post.body.truncate(25) %></td> 
      <td> | <%= link_to "Comments(#{post.comments.count})",  post_path(post)%> |</td> 
    </tr>
  <% end %>
</table>

